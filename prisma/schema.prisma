generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ROLES{
  ADMIN
  USER
  EDITOR
  AURTHOR
  CONTRIBUTOR
}

model User{
  id Int @id @default(autoincrement())
  username String
  password String
  email String
  role ROLES @default(USER)
  blogs Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  userId  Int
  user    User    @relation(fields: [userId], references: [id])
}